/* dist/certificate-item/index.wxss */
.ci-home{
  flex: 1; 
   position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  padding: 20rpx;
  margin: 15rpx;
  border-radius: 15rpx;
}
.ci-text{
  display: flex;
  flex-flow: column nowrap;
  justify-items: center;
  align-content: center;
  text-align:center;
  color: white;
}
.ci-text .ci-h1{
  font-size: 18px;
  font-weight: 600
}
.ci-text .ci-h2{
  font-weight: 400;
}
