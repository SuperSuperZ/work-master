.m-home {
  flex: 1;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  padding: 20rpx;
  margin: 20rpx 20rpx;
  border-radius: 5rpx;
  box-shadow: 5rpx 5rpx 5rpx black;
}
.m-home .m-home_img {
  height: 50rpx;
  width: 50rpx;
  margin-left: 15rpx;
}
.m-home .m-home_text {
  margin-left: 30rpx;
}
.m-home .m-home_h2 {
  color: #FFFFFF;
  font-size: 35rpx;
}
.m-home .m-home_h3 {
  opacity: 0.7;
  color: #F5F5F5;
  font-size: 25rpx;
}
