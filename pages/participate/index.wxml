<!--pages/activity/normal/social/index.wxml-->
<!--筛选项-->
<view  class='{{showSearch?"show":"hide"}}'>
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-currentind="0" bindtap="tabNav">类型
      <i data-currentind="0"></i>
    </view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-currentind="1" bindtap="tabNav">状态
      <i data-currentind="1"></i>
    </view>
  </view>

   <!--筛选列表-->
  <view class="tabLayer" hidden="{{tab[0]}}">
    <text class="{{type_id==item.id?'active':''}}" wx:for="{{typeTabList}}" wx:key="p1" wx:for-item="item" data-id="{{item.id}}" data-index="0" bindtap="filter">{{item.title}}</text>
  </view>
  <view class="tabLayer" hidden="{{tab[1]}}">
    <text class="{{term_id==item.id?'active':''}}" wx:for="{{typeState}}" wx:key="p2" wx:for-item="item" data-id="{{item.id}}" data-index="1" bindtap="filter">{{item.title}}</text>
  </view>
</view>

<!-- 显示下面的内容 -->
<block wx:for="{{listData}}" wx:key="{{index}}"> 
  <wxs module="btn" src="./index.wxs"></wxs>
  <wux-white-space size='large' />
  <wux-wing-blank size="default" class='blank_top'>
    <wux-card title="{{item.activityName}}" >
      <view slot="body">
      <label>时间：</label> <text>{{item.start}}\n</text>
      <label wx:if="{{item.location!=null}}">地点：<text>{{item.location}}\n</text></label> 
      <label>描述：</label>  
      <view class='text_style'>
         <text>{{item.description}}\n</text>
      </view>
      <view>
          <button  class="{{btn.btnst(item.status)}} btn" bindtap='signUp' data-status="{{item.status}}" data-activityid="{{item.activityEntryId}}">
          {{btn.st(item.status)}}
          <view wx:if="{{item.status==0}}">
            <a wx:if="{{second[index]!=0}}">{{btn.dc(second[index])}}</a>
          </view>
          </button>
      </view>
    
      </view>
      <!-- <view slot="footer">{{item.createTime}}</view> -->
      <wux-white-space size='large' /> 
    </wux-card>
  </wux-wing-blank>
</block>

<view class='empty_page' hidden='{{!empty}}' wx:if="{{listData.length==0}}">
  <wux-prompt visible="{{empty}}" title="暂无活动" text="" />
</view>
