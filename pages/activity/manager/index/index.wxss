
.m-home {
  flex: 1;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  padding: 20rpx;
  margin: 20rpx 20rpx 0;
  border-radius: 5rpx;
  box-shadow: 5rpx 5rpx 5rpx black;
}
.color-school{
  background-color: #3498db;
  box-shadow: 5rpx 5rpx 5rpx #3498db;
  opacity: .8;
}
.color-social{
  background-color: #27ae60;
  box-shadow: 5rpx 5rpx 5rpx #27ae60;
  opacity: .8;
}
.color-volunteer{
  background-color: #f39c12;
  box-shadow: 5rpx 5rpx 5rpx #f39c12;
  opacity: .8;
}
.color-organization{
  background-color: #fc5c65;
  box-shadow: 5rpx 5rpx 5rpx #fc5c65;
  opacity: .8;
}
.color-recorder{
  background-color: #8e44ad;
  box-shadow: 5rpx 5rpx 5rpx #8e44ad;
  opacity: .8;
}
.color-make{
  background-color: #3c6382;
  box-shadow: 5rpx 5rpx 5rpx #3c6382;
  opacity: .8;
}
.color-undone{
  background-color: #3c6382;
  box-shadow: 5rpx 5rpx 5rpx #3c6382;
  opacity: .8;
}
.m-home::after{
  opacity: 0.5;
  border: 4rpx solid transparent;
  border-top: 4rpx solid 	#808080;
  border-right: 4rpx solid 	#808080;
  transform: translateY(-5rpx) rotate(45deg);
  width: 10rpx;
  height: 10rpx;
  position: absolute;
  top: 50%;
  right: 20rpx;
  content: ''
}
.m-home .m-home_img {
  height: 50rpx;
  width: 50rpx;
  margin-left: 15rpx;
}
.m-home .m-home_text {
  margin-left: 30rpx;
}
.m-home .m-home_h2 {
  color: #FFFFFF;
  font-size: 35rpx;
}
.m-home .m-home_h3 {
  opacity: 0.7;
  color: #F5F5F5;
  font-size: 25rpx;
}
@keyframes hover
{
from {transform: scale(1);}
to {transform: scale(0.97);}
}
