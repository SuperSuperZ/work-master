<!--pages/service/act_school/index.wxml-->

<wux-alert theme="positive">共参与了<span class="hours"> {{listData.length}} </span>次校园活动</wux-alert>
<block wx:for="{{listData}}" wx:key="{{index}}">
  <wux-white-space size='large'/>
  <wux-wing-blank size="default">
    <wux-card thumb='../../images/icon-seal-school.svg' title="{{item.activityName}}">
      <view slot="body">{{item.created}}</view>
    </wux-card>
  </wux-wing-blank>
</block>

<view class='empty_page' hidden='{{!empty}}'>
  <wux-prompt visible="{{empty}}" title="空空如也" text="没有活动章" />
</view>
